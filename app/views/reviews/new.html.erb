<%= simple_form_for [@location, @review] do |f| %>
<div class="container white">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <form action="#">
        <br>
        <h1 class="text-center">Add your review here</h1>
        <br>
        <br>
        <div class="row">
          <div class="col-xs-12">
            <div = class="form-group">
              <%= f.input :description %>
              <%= f.input :rating, collection: 0..5, prompt: "Add rating" %>
              <%= f.hidden_field :sender_id, :value => @location.recruteur.profil_id %>
              <%= f.hidden_field :recipient_id, :value => @location.developpeur.profil_id %>
            </div>

          </div>
        </div>
        <div class="text-right">
          <%= f.submit "Add review", class: "form-button" %>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>
