<%= simple_form_for [@profil,@recruteur] do |f| %>
<div class="container white">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <form action="#">
        <h1 class="text-center">Complete your recruter profile</h1>
        <div class="row">
          <div class="col-xs-12">
            <div>
              <%= f.input :description %>
            </div>
          </div>
        </div>
        <div class="text-right">
          <%= f.submit "Save", :class => 'btn btn-primary text-right' %>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>

