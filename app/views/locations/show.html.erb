

<h1 class="text-center"> Location n° <%= @location.id %> </h1>
<div class="align-btn-review">
  <%= button_to "Add a Review", new_location_review_path(@location), :method => :get, :class => "btn btn-primary" %>
</div>
  <br>
  <div class = "row">
    <div class = "col-md-8">
      <div class= "card-show">
        <h2 class="text-center">INFORMATIONS</h2>
        <br>
        <div class= "card-description-show">
          <p><strong> Developpeur: </strong><%= @location.developpeur.profil.name %></p>
          <p><strong> Recruteur: </strong><%= @location.recruteur.profil.name %></p>
          <p><strong> Status: </strong><%= @location.status %></p>
        </div>
        <%= render 'shared/newmessage', location: @location, message: @message %>
      </div>
    </div>
    <div class = "col-md-4">
      <div class="card-show">
        <h4 class="text-center"> RAPPEL COMMANDE </h4>
        <br>
        <br>
        <div class= "card-description-show">
          <p><strong> Price per day: </strong><%= @location.developpeur.price.to_i %></p>
          <p><strong> Check-in: </strong><%= @location.check_in%></p>
          <p><strong> Check-out: </strong><%= @location.check_out%></p>
          <br>
          <br>
          <h4><strong> Total Price: </strong><%= (((@location.check_out - @location.check_in).to_i))* @location.developpeur.price.to_i %> €</h4>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="container-message-content">
            <% if !@messages.blank? %>
              <div id="messages">
                <% @messages.each do |msg|%>
                  <%= render 'messages/show', msg: msg %>
                <% end %>
              </div>
            <% end %>
          </div>
    </div>
  </div>
