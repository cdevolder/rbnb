<%= simple_form_for [@profil,@developpeur] do |f| %>
<div class="container white">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <form action="#">
        <h1 class="text-center">Complete your developper profile</h1>
        <div class="row">
          <div class="col-xs-12">
            <div = class="form-group">
              <%= f.input :description %>
              <%= f.input :available, collection: ["Yes", "No"], prompt: "Select your status", selected: "Yes" %>
              <%= f.input :price %>
              <%= f.hidden_field :address, :value => @profil.address %>
              <%= f.hidden_field :city, :value => @profil.city %>


            </div>
          </div>
        </div>
        <div class="text-right">
          <%= f.submit "Save", :class => 'form-button text-right' %>
        </div>
      </form>
    </div>
  </div>
</div>
<% end %>
