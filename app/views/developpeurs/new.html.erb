<%= simple_form_for [@profil,@developpeur] do |f| %>
<div class="container white">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <form action="#">
        <h1 class="text-center">Complete your developper profile</h1>
        <div class="row">
          <div class="col-xs-12">
            <div = class="form-group">
              <%= f.input :description %>
              <%= f.input :available, collection: ["Yes", "No"], prompt: "Select your status", selected: "Yes" %>
              <%= f.input :price %>
            </div>
          </div>
        </div>
        <%= f.submit "Create Developpeur", :class => 'btn btn-primary text-right' %>
      </form>
    </div>
  </div>
</div>
<% end %>
